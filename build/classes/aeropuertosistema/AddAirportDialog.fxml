<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aeropuertosistema.AddAirportDialogController">
    
    <headerText>
        Añadir Nuevo Aeropuerto
    </headerText>
    
    <content>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            
            <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="País:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </content>
</DialogPane>