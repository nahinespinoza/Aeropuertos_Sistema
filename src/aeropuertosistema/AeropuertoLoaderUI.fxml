<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aeropuertosistema.AeropuertoLoaderController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <style>
        -fx-background-color: #f4f4f4;
    </style>
   
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Sistema de Gestión de Aeropuertos - Aeropuerto Daxing">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
   
    <Label style="-fx-font-weight: bold;" text="Información de Aeropuertos:">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </Label>
    <HBox spacing="10.0">
        <Button fx:id="loadButton" mnemonicParsing="false" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Cargar Aeropuertos desde Archivo" />
        <Button fx:id="displayButton" disable="true" mnemonicParsing="false" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Mostrar Aeropuertos Cargados" />
        <Button fx:id="clearButton" mnemonicParsing="false" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Limpiar" />
    </HBox>
    
    <Label style="-fx-font-weight: bold;" text="Información de Vuelos:">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </Label>
    <!-- NUEVA SECCIÓN PARA BOTONES DE VUELOS -->
    <HBox spacing="10.0">
        <Button fx:id="loadVuelosButton" disable="true" mnemonicParsing="false" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" text="Cargar Vuelos desde Archivo" />
        <Button fx:id="displayVuelosButton" disable="true" mnemonicParsing="false" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" text="Mostrar Vuelos y Conexiones" />
        <Button fx:id="estadisticasButton" disable="true" mnemonicParsing="false" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;" text="Ver Estadísticas" />
        <Button fx:id="viewGraphButton" mnemonicParsing="false" onAction="#handleViewGraph" style="-fx-background-color: #9c27b0; -fx-text-fill: white; -fx-font-weight: bold;" text="Visualización Completa del Grafo" />
    </HBox>

    <!-- Sección para Gestión de Aeropuertos -->
    <Label style="-fx-font-weight: bold;" text="Gestión de Aeropuertos:">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>

    <HBox spacing="10.0">
        <Button fx:id="addAirportButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Añadir Aeropuerto" />
        <Button fx:id="deleteAirportButton" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar Aeropuerto" />
        <Button fx:id="airlineAnalysisButton" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" text="Análisis de Aerolínea" />    
                <ComboBox fx:id="airlineComboBox" promptText="Seleccione aerolínea" />

    </HBox>
    

    <!-- NUEVO: ComboBox para seleccionar aeropuerto a eliminar -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Seleccionar aeropuerto:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="deleteAirportComboBox" prefWidth="250" promptText="Seleccione aeropuerto a eliminar" />
    </HBox>

    <!-- Sección para Gestión de Vuelos -->
    <Label style="-fx-font-weight: bold;" text="Gestión de Vuelos:">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>

    <HBox spacing="10.0">
        <Button fx:id="addFlightButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Añadir Vuelo" />
        <Button fx:id="editFlightButton" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" text="Editar Vuelo" />
        <Button fx:id="deleteFlightButton" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar Vuelo" />
    </HBox>

    <!-- Sección para Búsqueda de Rutas -->
    <Label style="-fx-font-weight: bold;" text="Búsqueda de Rutas Óptimas:">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>

    <HBox spacing="10.0">
        <ComboBox fx:id="origenComboBox" prefWidth="200" promptText="Aeropuerto origen" />
        <ComboBox fx:id="destinoComboBox" prefWidth="200" promptText="Aeropuerto destino" />
        <Button fx:id="buscarRutaButton" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="Buscar Ruta Óptima" />
        
    </HBox>
   
    <!-- Área de salida -->
    <Label style="-fx-font-weight: bold;" text="Información del Sistema:">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </Label>
   
    <ScrollPane fitToWidth="true">
        <TextArea fx:id="outputArea" editable="false" prefHeight="400.0" style="-fx-font-family: 'Monospaced'; -fx-font-size: 12px;" />
    </ScrollPane>
   
    <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60;" text="Listo para cargar datos">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
    <!-- Sección para Exportación de Rutas -->
    <Label style="-fx-font-weight: bold;" text="Exportación de Rutas:">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </Label>

    <HBox spacing="10.0">
        <Button fx:id="exportTXTButton" style="-fx-background-color: #7d3c98; -fx-text-fill: white; -fx-font-weight: bold;" text="Exportar TXT" />
        <Button fx:id="exportCSVButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Exportar CSV" />
        <Button fx:id="exportHTMLButton" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;" text="Exportar HTML" />
    </HBox>

</VBox>