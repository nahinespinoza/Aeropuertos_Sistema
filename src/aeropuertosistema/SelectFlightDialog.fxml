<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aeropuertosistema.SelectFlightDialogController">
    
    <headerText>
        Seleccionar Vuelo a Editar
    </headerText>
    
    <content>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            
            <Label text="Aeropuerto Origen:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ComboBox fx:id="origenCombo" promptText="Seleccione origen" GridPane.columnIndex="1" GridPane.rowIndex="0"
                      onAction="#onOrigenSelected"/>
            
            <Label text="Aeropuerto Destino:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="destinoCombo" promptText="Seleccione destino" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      onAction="#onDestinoSelected"/>
            
            <Label text="Vuelo:" GridPane.columnIndex="0" GridPane.rowIndex="2" visible="${origenCombo.value != null &amp;&amp; destinoCombo.value != null}"/>
            <ComboBox fx:id="vueloCombo" promptText="Seleccione vuelo" GridPane.columnIndex="1" GridPane.rowIndex="2"
                      visible="${origenCombo.value != null &amp;&amp; destinoCombo.value != null}"/>
        </GridPane>
    </content>
</DialogPane>